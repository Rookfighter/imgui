intf_libs = # Interface dependencies.
import intf_libs += glfw%lib{glfw}
import intf_libs += imgui%lib{imgui}

lib{imgui-platform-glfw}: {hxx cxx}{**} $intf_libs

cxx.poptions += "-I$out_base" "-I$src_base" -DIMGUI_EXPORT

# Export options.
lib{imgui-platform-glfw}:
{
    cxx.export.poptions = "-I$out_base" "-I$src_base"
    cxx.export.libs = $intf_libs
}

# For pre-releases use the complete version to make sure they cannot be used
# in place of another pre-release or the final version. See the version module
# for details on the version.* variable values.
if $version.pre_release
    lib{imgui-platform-glfw}: bin.lib.version = "-$version.project_id"
else
    lib{imgui-platform-glfw}: bin.lib.version = "-$version.major.$version.minor"

hxx{*}:
{
    install = include/imgui/backends/
}
